<main class="pt-24 pb-20 min-h-screen">
	<!-- Product Grid: Gallery + Info -->
	<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16">
			<!-- LEFT: Product Gallery -->
			<div class="product-gallery reveal reveal-bottom">
				<!-- Main Image -->
				<div class="relative aspect-square rounded-3xl overflow-hidden bg-[#0a0a0a] border border-white/5 mb-4 group">
					<div class="swiper productMainSwiper h-full w-full">
						<div class="swiper-wrapper" id="product-main-images">
							{% if product.images.size > 0 %}
								{% for image in product.images %}
									<div class="swiper-slide">
										<img src="{{ image | image_url: width: 1200 }}" alt="{{ product.title | escape }}" class="w-full h-full object-cover" />
									</div>
								{% endfor %}
							{% endif %}
						</div>
					</div>

					<!-- Zoom Button -->
					<button
						onclick="openProductLightbox()"
						class="absolute top-4 right-4 bg-black/50 hover:bg-black/80 backdrop-blur-sm text-white w-10 h-10 flex items-center justify-center rounded-full transition-all opacity-0 group-hover:opacity-100 border border-white/10"
						title="View fullscreen"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="18"
							height="18"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7" />
						</svg>
					</button>

					<!-- Badge -->
					<div id="product-badge" class="absolute top-4 left-4 bg-red-500 text-white text-[9px] font-bold px-3 py-1.5 rounded-full uppercase tracking-wider hidden">Sale</div>

					<!-- Navigation Arrows -->
					<button
						class="product-gallery-prev absolute left-4 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/80 backdrop-blur-sm text-white w-10 h-10 flex items-center justify-center rounded-full transition-all opacity-0 group-hover:opacity-100 border border-white/10"
					>
						‹
					</button>
					<button
						class="product-gallery-next absolute right-4 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/80 backdrop-blur-sm text-white w-10 h-10 flex items-center justify-center rounded-full transition-all opacity-0 group-hover:opacity-100 border border-white/10"
					>
						›
					</button>
				</div>

				<!-- Thumbnails -->
				<div class="swiper productThumbsSwiper">
					<div class="swiper-wrapper" id="product-thumbnails">
						{% if product.images.size > 0 %}
							{% for image in product.images %}
								<div class="swiper-slide cursor-pointer opacity-50 hover:opacity-100 transition-opacity rounded-xl overflow-hidden border-2 border-transparent">
									<img src="{{ image | image_url: width: 240 }}" alt="{{ product.title | escape }}" class="w-full h-full object-cover aspect-square" />
								</div>
							{% endfor %}
						{% endif %}
					</div>
				</div>
			</div>

			<!-- RIGHT: Product Info -->
			<div class="product-info reveal reveal-bottom lg:py-4" style="transition-delay: 0.1s">

				<!-- Category -->
				<div class="mb-2">
					<span id="product-category" class="text-purple-400 text-[10px] uppercase tracking-[0.3em] font-bold">{{ product.type }}</span>
				</div>

				<!-- Title -->
				<h1 id="product-title" class="text-4xl lg:text-5xl font-black italic uppercase tracking-tight leading-none mb-4">{{ product.title }}</h1>

				<!-- Rating -->
				{% render 'jdgm-rating', product: product %}


				<!-- Price -->
				<div class="flex items-end gap-4 mb-4">
					<div id="product-price" class="text-4xl font-mono font-black text-white">{{ product.price | money }}</div>
					{% if product.compare_at_price > product.price %}
						<div id="product-old-price" class="text-xl font-mono text-white/30 line-through">{{ product.compare_at_price | money }}</div>
					{% else %}
						<div id="product-old-price" class="text-xl font-mono text-white/30 line-through hidden">$0</div>
					{% endif %}
					<div id="product-discount" class="bg-red-500/20 text-red-400 text-[10px] font-bold px-2 py-1 rounded-full uppercase hidden">-0%</div>
				</div>

				<!-- Variants: Color -->
				<div id="variant-color-section" class="mb-6 hidden">
					<div class="flex items-center justify-between mb-3">
						<span class="text-[10px] uppercase tracking-widest text-white/40">Color</span>
						<span id="selected-color-name" class="text-[10px] uppercase tracking-widest text-white/60">Select</span>
					</div>
					<div id="variant-colors" class="flex flex-wrap gap-3">
						<!-- Color swatches will be injected -->
					</div>
				</div>

				<!-- Variants: Size/Model -->
				<div id="variant-size-section" class="mb-8 hidden">
					<div class="flex items-center justify-between mb-3">
						<span class="text-[10px] uppercase tracking-widest text-white/40">Size / Model / Color</span>
					</div>
					<div id="variant-sizes" class="flex flex-wrap gap-2">
						<!-- Size buttons will be injected -->
					</div>
				</div>

				<!-- Quantity -->
				<div class="mb-8">
					<span class="text-[10px] uppercase tracking-widest text-white/40 block mb-3">Quantity</span>
					<div class="flex items-center">
						<div class="flex items-center border border-white/20 rounded-xl overflow-hidden">
							<button onclick="decrementQuantity()" class="px-4 py-3 hover:bg-white/10 transition-colors text-lg font-mono">−</button>
							<input
								type="number"
								id="product-quantity"
								min="1"
								max="99"
								value="1"
								class="w-16 text-center bg-transparent text-lg font-mono focus:outline-none"
								onchange="validateQuantity(this)"
							/>
							<button onclick="incrementQuantity()" class="px-4 py-3 hover:bg-white/10 transition-colors text-lg font-mono">+</button>
						</div>
						<span id="product-stock" class="ml-4 text-xs text-white/40">
							<span class="w-2 h-2 bg-green-500 rounded-full inline-block mr-1"></span>
							In Stock
						</span>
					</div>
				</div>

				<!-- Add to Cart Button -->
				<div class="flex flex-col sm:flex-row gap-4 mb-8">
					<button
						id="add-to-cart-btn"
						data-add-to-cart-pdp="true"
						data-handle="{{ product.handle }}"
						data-variant-id="{{ product.selected_or_first_available_variant.id }}"
						data-title="{{ product.title | escape }}"
						data-price="{{ product.price | money_without_currency }}"
						data-image="{{ product.featured_image | image_url: width: 600 }}"
						type="button"
						class="flex-1 bg-white text-black py-4 px-8 rounded-xl text-sm font-black uppercase tracking-widest hover:bg-gray-200 transition-all flex items-center justify-center gap-2 group"
					>
						<svg
							class="w-5 h-5 transition-transform group-hover:scale-110"
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<circle cx="9" cy="21" r="1"></circle>
							<circle cx="20" cy="21" r="1"></circle>
							<path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
						</svg>
						<span id="add-to-cart-text">Add to Cart</span>
					</button>
				</div>

				<!-- USP Features -->
				<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 py-6 border-t border-b border-white/10">
					<div class="flex items-center gap-3">
						<div class="w-10 h-10 rounded-full bg-green-500/10 flex items-center justify-center">
							<svg
								class="w-5 h-5 text-green-400"
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"
							>
								<rect x="1" y="3" width="15" height="13"></rect>
								<polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
								<circle cx="5.5" cy="18.5" r="2.5"></circle>
								<circle cx="18.5" cy="18.5" r="2.5"></circle>
							</svg>
						</div>
						<div>
							<div class="text-[10px] uppercase tracking-widest text-white/40">Shipping</div>
							<div class="text-xs font-bold">Free</div>
						</div>
					</div>
					<div class="flex items-center gap-3">
						<div class="w-10 h-10 rounded-full bg-yellow-500/10 flex items-center justify-center">
							<svg
								class="w-5 h-5 text-yellow-400"
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"
							>
								<circle cx="12" cy="12" r="10"></circle>
								<polyline points="12 6 12 12 16 14"></polyline>
							</svg>
						</div>
						<div>
							<div class="text-[10px] uppercase tracking-widest text-white/40">Delivery</div>
							<div class="text-xs font-bold">3-12 Days</div>
						</div>
					</div>
					<div class="flex items-center gap-3">
						<div class="w-10 h-10 rounded-full bg-blue-500/10 flex items-center justify-center">
							<svg
								class="w-5 h-5 text-blue-400"
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"
							>
								<polyline points="23 4 23 10 17 10"></polyline>
								<path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
							</svg>
						</div>
						<div>
							<div class="text-[10px] uppercase tracking-widest text-white/40">Returns</div>
							<div class="text-xs font-bold">14 Days</div>
						</div>
					</div>
				</div>

				<!-- SKU & Meta -->
				<div class="mt-6 flex flex-wrap gap-4 text-[10px] uppercase tracking-widest text-white/30">
					<span>SKU: <span id="product-sku">{{ product.selected_or_first_available_variant.sku }}</span></span>
					<span>•</span>
					<span>Vendor: <span id="product-vendor">{{ product.vendor }}</span></span>
					<span>•</span>
					<span><a href="{{ shipping-policy.url }}">Shipping Policy</a></span>
				</div>
			</div>
		</div>
	</section>

	<!-- Product Tabs: Description, Specs, Shipping, Reviews -->
	<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-20">
		<div class="border-b border-white/10">
			<nav class="flex gap-8 overflow-x-auto" id="product-tabs-nav">
				<button
					class="product-tab-btn active pb-4 text-sm font-bold uppercase tracking-widest text-white border-b-2 border-purple-500 transition-all whitespace-nowrap"
					data-tab="description"
					onclick="switchProductTab('description')"
				>
					Description
				</button>
				<button
					class="product-tab-btn pb-4 text-sm font-bold uppercase tracking-widest text-white/40 border-b-2 border-transparent hover:text-white/60 transition-all whitespace-nowrap"
					data-tab="shipping"
					onclick="switchProductTab('shipping')"
				>
					Shipping & Returns
				</button>
				{% assign reviews_count = product.metafields.judgeme.badge | split: "data-number-of-reviews='" | last | split: "'" | first %}
				<button
					class="product-tab-btn pb-4 text-sm font-bold uppercase tracking-widest text-white/40 border-b-2 border-transparent hover:text-white/60 transition-all whitespace-nowrap"
					data-tab="reviews"
					onclick="switchProductTab('reviews')"
				>
					Reviews <span id="tab-reviews-count" class="text-purple-400">({{ reviews_count | default: 0 }})</span>
				</button>
			</nav>
		</div>

		<div class="py-10">
			<!-- Description Tab -->
			<div id="tab-description" class="product-tab-content">
				<div class="max-w-3xl">
					<div id="product-full-description" class="prose prose-invert prose-sm">
						{% if product.description != blank %}
							{{ product.description }}
						{% else %}
							<p class="text-white/60 leading-relaxed">Loading..</p>
						{% endif %}
					</div>
				</div>
			</div>

			<!-- Shipping Tab -->
			<div id="tab-shipping" class="product-tab-content hidden">
				<div class="max-w-2xl space-y-6">
					<div>
						<h3 class="text-lg font-bold mb-3">Shipping Information</h3>
						<ul class="space-y-2 text-white/60 text-sm">
							<li class="flex items-start gap-2">
								<span class="text-green-400 mt-1">✓</span>
								<span>Free shipping</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-green-400 mt-1">✓</span>
								<span>Standard delivery: 3-12 business days</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-green-400 mt-1">✓</span>
								<span>International shipping available</span>
							</li>
						</ul>
					</div>
					<div>
						<h3 class="text-lg font-bold mb-3">Return Policy</h3>
						<ul class="space-y-2 text-white/60 text-sm">
							<li class="flex items-start gap-2">
								<span class="text-blue-400 mt-1">↩</span>
								<span>14-day return policy for unused items</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-blue-400 mt-1">↩</span>
								<span>Refund processed within 5-7 business days</span>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<!-- Reviews Tab -->
			<div id="tab-reviews" class="product-tab-content hidden w-full">
    <div class="max-w-4xl mx-auto mt-8 md:mt-12">
        
        <div class="relative bg-[#050505] border border-white/10 rounded-3xl p-6 md:p-10 shadow-[0_0_40px_rgba(0,0,0,0.5)] overflow-hidden">
            
            <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-purple-600 to-transparent opacity-70"></div>
            <div class="absolute -top-24 left-1/2 -translate-x-1/2 w-64 h-64 bg-purple-600/10 rounded-full blur-[80px]"></div>

			<style>
				/* 1. Force all widget text (including paragraphs, spans, links) */
                #judgeme_product_reviews,
                #judgeme_product_reviews * {
                    color: #ffffff !important;
                }

				/* 2. Explicitly color titles and authors */
                .jdgm-rev__title,
                .jdgm-rev__body,
                .jdgm-rev__author,
                .jdgm-rev__timestamp,
                .jdgm-rev__icon {
                    color: #ffffff !important;
                }

				/* 3. Restore star colors (otherwise they turn white from the rule above) */
                .jdgm-star.jdgm--on:before {
                    color: #a855f7 !important; /* purple-500 */
                }
                .jdgm-star.jdgm--off:before {
                    color: #333333 !important;
                }

				/* 4. Style form fields (dark background, white text) */
                .jdgm-form-wrapper input[type="text"], 
                .jdgm-form-wrapper input[type="email"], 
                .jdgm-form-wrapper textarea {
                    background-color: #1a1a1a !important;
                    border: 1px solid #333 !important;
                    color: #ffffff !important;
                }

				/* 5. "Write a review" button (black text on white background) */
                a.jdgm-write-rev-link {
                    background-color: #ffffff !important;
                    color: #000000 !important;
                    border: none !important;
                    border-radius: 8px !important;
                    font-weight: 900 !important;
                    text-transform: uppercase !important;
                    text-decoration: none !important;
                    padding: 10px 20px !important;
                }
				/* Button hover */
                a.jdgm-write-rev-link:hover {
                    background-color: #9333ea !important; /* purple-600 */
                    color: #ffffff !important;
                }
                
				/* Remove extra gray borders */
                .jdgm-rev { border-top: 1px solid rgba(255,255,255,0.1) !important; }
                .jdgm-row-stars { border: none !important; }
            </style>

            {% assign has_legacy = false %}
            {% if product.metafields.judgeme.widget.size > 20 %}
                {% assign has_legacy = true %}
            {% endif %}
            <div style='clear:both'></div>
            <div id='judgeme_product_reviews' class='jdgm-widget jdgm-review-widget' 
                data-product-title='{{ product.title | escape }}' 
                data-id='{{ product.id }}' 
                data-product-id='{{ product.id }}' 
                data-widget='review' 
                data-auto-install='false' 
                data-shop-reviews-count='{{ shop.metafields.judgeme.shop_reviews_count | default: 0 | escape }}' 
                data-entry-point='review_widget.js' 
                data-entry-key='review-widget/main.js'>
                {% if has_legacy %}
                    <div class='jdgm-legacy-widget-content' style='display: none;'>
                        {{ product.metafields.judgeme.widget }}
                    </div>
                {% endif %}
            </div>
            {% if product.metafields.judgeme.review_widget_data %}
                <script>
                    jdgm.data ||= {}; 
                    jdgm.data.reviewWidget ||= {}; 
                    jdgm.data.reviewWidget[{{ product.id }}] = {{ product.metafields.judgeme.review_widget_data }}
                </script>
            {% endif %}
            </div>
    </div>
</div>
		</div>
	</section>

</main>

<!-- Sticky Mobile Add to Cart Bar -->
<div id="mobile-sticky-cart" class="fixed bottom-0 inset-x-0 bg-black/95 backdrop-blur-xl border-t border-white/10 p-4 z-50 lg:hidden translate-y-full transition-transform duration-300">
	<div class="flex items-center justify-between gap-4">
		<div class="flex-1 min-w-0">
			<div id="sticky-price" class="text-lg font-bold font-mono">$0</div>
			<div id="sticky-title" class="text-xs text-white/50 truncate">Product Name</div>
		</div>
		<button
			id="sticky-add-to-cart-btn"
			data-handle="{{ product.handle }}"
			data-variant-id="{{ product.selected_or_first_available_variant.id }}"
			data-title="{{ product.title | escape }}"
			data-price="{{ product.price | money_without_currency }}"
			data-image="{{ product.featured_image | image_url: width: 600 }}"
			onclick="addToCart(this)"
			class="bg-white text-black px-6 py-3 rounded-xl text-[10px] font-black uppercase tracking-widest hover:bg-gray-200 transition-colors flex items-center gap-2"
		>
			<svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<circle cx="9" cy="21" r="1"></circle>
				<circle cx="20" cy="21" r="1"></circle>
				<path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
			</svg>
			Add
		</button>
	</div>
</div>

<!-- Product Lightbox -->
<div id="product-lightbox" class="fixed inset-0 z-[200] bg-black/95 backdrop-blur-md hidden flex items-center justify-center">
	<button
		onclick="closeProductLightbox()"
		class="absolute top-6 right-6 bg-white/10 hover:bg-white/20 text-white w-12 h-12 flex items-center justify-center rounded-full transition-all border border-white/10 text-xl z-10"
	>
		✕
	</button>
	<button
		class="lightbox-prev absolute left-6 top-1/2 -translate-y-1/2 bg-white/10 hover:bg-white/20 text-white w-12 h-12 flex items-center justify-center rounded-full transition-all border border-white/10 text-2xl"
	>
		‹
	</button>
	<button
		class="lightbox-next absolute right-6 top-1/2 -translate-y-1/2 bg-white/10 hover:bg-white/20 text-white w-12 h-12 flex items-center justify-center rounded-full transition-all border border-white/10 text-2xl"
	>
		›
	</button>
	<div class="swiper productLightboxSwiper w-full max-w-5xl mx-auto px-16">
		<div class="swiper-wrapper" id="lightbox-images">
			<!-- Images will be injected -->
		</div>
	</div>
	<div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-2" id="lightbox-pagination">
		<!-- Pagination dots -->
	</div>
</div>

<script>
	window.CozySpot = window.CozySpot || {}
	window.CozySpot.productHandle = {{ product.handle | json }}
	window.CozySpot.productData = {{ product | json }}
</script>

{% schema %}
{
	"name": "Product Info",
	"settings": [],
	"blocks": [],
	"presets": [{ "name": "Product Info", "category": "Pages" }]
}
{% endschema %}
