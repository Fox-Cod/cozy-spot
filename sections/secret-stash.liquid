<section class="secret-stash-wrap">
  <div class="secret-stash-inner">
    <div class="secret-stash-badge">Invite only</div>
    <h1 class="secret-stash-title">Secret Stash</h1>
    <p class="secret-stash-subtitle">Сканируй QR — открой свою скидку.</p>

    {% assign secret_url = shop.url | append: page.url %}
    <div class="secret-stash-card">
      <div class="secret-stash-qr">
        <img
          src="https://api.qrserver.com/v1/create-qr-code/?size=260x260&data={{ secret_url | url_encode }}"
          alt="Secret access QR"
          loading="lazy"
        />
      </div>

      <div class="secret-stash-code">
        <div class="secret-stash-code-label">Секретный код</div>
        <div class="secret-stash-code-value">tastehub</div>
        <div class="secret-stash-code-hint">Примените при оформлении заказа.</div>
      </div>
    </div>

    <div class="secret-stash-meta">Cozy‑Spot • закрытая зона</div>
  </div>
</section>

{% schema %}
{
  "name": "Secret stash",
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "Secret stash",
      "category": "Page"
    }
  ]
}
{% endschema %}
