{% comment %}
  This section is used in the 404 template to render page shown when customers
  enter an invalid store URL.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/404
{% endcomment %}

<section class="relative min-h-[85vh] overflow-hidden bg-black">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(168,85,247,0.18),transparent_55%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,_rgba(59,130,246,0.12),transparent_60%)]"></div>
    <div class="absolute inset-0 opacity-15" style="background-image: linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-6 py-24 md:py-32 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
    <div class="space-y-8">
      <div class="inline-flex items-center gap-3 text-[10px] uppercase tracking-[0.4em] text-white/40">
        <span class="w-10 h-[1px] bg-white/20"></span>
        Lost Page
      </div>

      <h1 class="text-[20vw] lg:text-[11vw] font-black italic tracking-tighter leading-none text-transparent bg-clip-text bg-gradient-to-r from-white via-purple-300 to-blue-300">
        404
      </h1>

      <p class="text-white/90 text-xl md:text-2xl font-semibold">
        {{ '404.title' | t }}
      </p>
      <p class="text-gray-400 text-sm md:text-base max-w-md leading-relaxed">
        {{ '404.not_found' | t }}
      </p>

      <div class="flex flex-wrap gap-3 text-[10px] uppercase tracking-[0.3em] text-white/50">
        <span class="px-3 py-1 rounded-full border border-white/10 bg-white/5">Route missing</span>
        <span class="px-3 py-1 rounded-full border border-white/10 bg-white/5">Signal low</span>
        <span class="px-3 py-1 rounded-full border border-white/10 bg-white/5">Try redirect</span>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 pt-2">
        <a
          href="{{ routes.root_url }}"
          class="px-6 py-3 rounded-xl bg-white text-black text-xs md:text-sm font-black uppercase tracking-[0.2em] text-center hover:bg-purple-500 hover:text-white transition-all duration-300"
        >
          Back Home
        </a>
        <a
          href="{{ routes.products_collection_url }}"
          class="px-6 py-3 rounded-xl border border-white/15 text-white/80 text-xs md:text-sm font-black uppercase tracking-[0.2em] text-center hover:bg-white/10 transition-all duration-300"
        >
          {{ '404.back_to_shopping' | t }}
        </a>
      </div>
    </div>

    <div class="relative w-full">
      <div class="relative mx-auto w-full max-w-md">
        <div class="absolute -inset-1 rounded-[2rem] bg-gradient-to-r from-purple-500/40 via-white/10 to-blue-500/40 blur-xl opacity-60"></div>

        <div class="relative rounded-[2rem] border border-white/10 bg-white/5 backdrop-blur-2xl p-8 md:p-10 shadow-[0_30px_80px_-25px_rgba(59,130,246,0.35)]">
          <div class="flex items-center justify-between text-white/60 text-[10px] uppercase tracking-[0.3em]">
            <span>Navigator</span>
            <span class="text-blue-300">Offline</span>
          </div>

          <div class="relative mt-8 h-48 flex items-center justify-center">
            <svg class="w-44 h-44" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
              <defs>
                <radialGradient id="radarGlow" cx="50%" cy="50%" r="50%">
                  <stop offset="0%" stop-color="rgba(255,255,255,0.6)" />
                  <stop offset="100%" stop-color="rgba(255,255,255,0)" />
                </radialGradient>
              </defs>
              <circle cx="100" cy="100" r="86" stroke="rgba(255,255,255,0.12)" stroke-width="1" />
              <circle cx="100" cy="100" r="62" stroke="rgba(255,255,255,0.12)" stroke-width="1" />
              <circle cx="100" cy="100" r="38" stroke="rgba(168,85,247,0.3)" stroke-width="1" />
              <line x1="100" y1="100" x2="100" y2="16" stroke="rgba(168,85,247,0.7)" stroke-width="2">
                <animateTransform attributeName="transform" type="rotate" from="0 100 100" to="360 100 100" dur="6s" repeatCount="indefinite" />
              </line>
              <circle cx="100" cy="100" r="24" fill="url(#radarGlow)">
                <animate attributeName="r" values="20;28;20" dur="3s" repeatCount="indefinite" />
              </circle>
              <circle cx="100" cy="36" r="4" fill="rgba(59,130,246,0.8)">
                <animateTransform attributeName="transform" type="rotate" from="0 100 100" to="-360 100 100" dur="9s" repeatCount="indefinite" />
              </circle>
            </svg>
          </div>

          <div class="mt-8 grid grid-cols-2 gap-4 text-[10px] uppercase tracking-[0.3em] text-white/50">
            <div class="space-y-1">
              <div class="text-white/30">Beacon</div>
              <div class="text-white/80">Not found</div>
            </div>
            <div class="space-y-1 text-right">
              <div class="text-white/30">Node</div>
              <div class="text-white/80">404</div>
            </div>
            <div class="space-y-1">
              <div class="text-white/30">Sync</div>
              <div class="text-purple-300">Pending</div>
            </div>
            <div class="space-y-1 text-right">
              <div class="text-white/30">Latency</div>
              <div class="text-blue-300">High</div>
            </div>
          </div>

          <div class="pt-6">
            <div class="h-[1px] w-full bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
            <p class="text-[10px] uppercase tracking-[0.4em] text-white/40 text-center mt-4">Auto recovery initiated</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:general.404",
  "settings": []
}
{% endschema %}
