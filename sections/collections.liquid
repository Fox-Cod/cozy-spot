<!-- Collections section content (Shopify section fragment) -->
<main class="px-6 lg:px-16 py-16 space-y-12 max-w-6xl mx-auto">
			{% assign products = collections['all'].products %}
			<!-- Hero / Banner -->
			<section class="reveal reveal-bottom bg-gradient-to-br from-purple-700/20 via-blue-500/10 to-transparent border border-white/10 rounded-3xl p-8 lg:p-12 overflow-hidden relative">
				<div class="relative z-10 space-y-4">
					<p class="text-xs uppercase tracking-[0.3em] text-white/50">Curated collections</p>
					<h1 class="text-4xl lg:text-5xl font-black uppercase italic leading-tight">Shop curated desk sets</h1>
					<p class="text-white/60 max-w-2xl">Pick from ready-made setups, mix lighting and decor, and add items straight to your cart. All items sync with the existing cart sidebar.</p>
					<div class="flex flex-wrap gap-3 pt-2">
						<div class="relative flex-1 min-w-[140px]">
							<button
								id="checkout-btn"
								class="w-full border border-white/10 text-white/20 px-4 py-3 rounded-xl text-xs font-black uppercase tracking-[0.2em] cursor-not-allowed transition-all duration-300"
								disabled
							>
								Ready-made Setups
							</button>

							<span
								class="absolute -top-2 -right-1 bg-purple-600 text-white text-[7px] font-bold uppercase tracking-widest px-1.5 py-0.5 rounded shadow-lg border border-purple-400/50 z-10 whitespace-nowrap"
							>
								Coming Soon
							</span>
						</div>
					</div>
				</div>
				<div class="absolute -right-12 -bottom-12 w-64 h-64 bg-purple-500/20 blur-3xl rounded-full"></div>
			</section>

            <!-- Product Grid -->
			<section id="product" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
				{% if products.size > 0 %}
					{% for product in products %}
						<article class="group p-3 border border-white/5 bg-gradient-to-b from-white/[0.05] to-transparent backdrop-blur-2xl transition-all duration-500 hover:-translate-y-3 hover:border-purple-500/40 hover:shadow-[0_20px_50px_-10px_rgba(168,85,247,0.2)] rounded-2xl overflow-hidden">
							<a href="{{ product.url }}" class="block">
								<div class="relative h-52 bg-white/5 overflow-hidden rounded-2xl">
									{% if product.featured_image %}
										<img src="{{ product.featured_image | image_url: width: 800 }}" alt="{{ product.title | escape | slice: 0, 27 }}" loading="lazy" class="w-full h-full object-cover transition-transform duration-500 hover:scale-105" />
									{% endif %}
								</div>
							</a>
							<div class="p-5 space-y-3">
								<a href="{{ product.url }}" class="block">
									<h3 class="text-lg font-black leading-tight hover:text-purple-400 transition-colors">{{ product.title | slice: 0, 27 }}</h3>
								</a>
								<div class="text-xs">
									{% render 'jdgm-rating', product: product %}
								</div>
								<div class="flex items-center justify-between pt-2">
									<div class="flex items-center gap-2" data-price-wrap data-price-variant-id="{{ product.selected_or_first_available_variant.id }}">
										<div class="text-lg font-mono font-bold" data-price-current>{{ product.price | money }}</div>
										{% if product.compare_at_price > product.price %}
											<div class="text-xs text-white/40 line-through" data-price-compare>{{ product.compare_at_price | money }}</div>
											{% assign discount_amount = product.compare_at_price | minus: product.price %}
											{% assign discount_percent = discount_amount | times: 100.0 | divided_by: product.compare_at_price | round %}
											<div class="text-[10px] text-red-400 font-bold" data-price-discount>-{{ discount_percent }}%</div>
										{% else %}
											<div class="text-xs text-white/40 line-through hidden" data-price-compare></div>
											<div class="text-[10px] text-red-400 font-bold hidden" data-price-discount></div>
										{% endif %}
									</div>
									<button
										class="add-btn relative w-10 h-10 flex items-center justify-center bg-white text-black rounded-lg hover:bg-purple-500 hover:text-white transition-all duration-300"
										data-add-to-cart="true"
										data-handle="{{ product.handle }}"
										data-variant-id="{{ product.selected_or_first_available_variant.id }}"
										data-title="{{ product.title | escape }}"
										data-price="{{ product.price | money_without_currency }}"
										data-image="{{ product.featured_image | image_url: width: 400 }}"
										aria-label="Add {{ product.title | escape }} to cart"
										title="Add to cart"
									>
										<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4">
											<circle cx="9" cy="21" r="1"></circle>
											<circle cx="20" cy="21" r="1"></circle>
											<path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
										</svg>
										<span class="absolute -top-2 -right-2 w-5 h-5 bg-purple-600 text-white rounded-full flex items-center justify-center text-[10px] font-black border border-white/10">+</span>
										<span class="sr-only">Add to cart</span>
									</button>
								</div>
							</div>
						</article>
					{% endfor %}
				{% endif %}
			</section>
		</main>
