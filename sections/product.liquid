<!doctype html>
<html lang="en-US">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<!-- Dynamic SEO Meta Tags (will be updated via JS) -->
		<title>Product | CozySpot</title>
		<meta name="description" content="Premium workspace products for your perfect setup." />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href="" id="canonical-url" />

		<!-- Open Graph -->
		<meta property="og:type" content="product" />
		<meta property="og:title" content="" id="og-title" />
		<meta property="og:description" content="" id="og-description" />
		<meta property="og:image" content="" id="og-image" />
		<meta property="og:url" content="" id="og-url" />
		<meta property="product:price:amount" content="" id="og-price" />
		<meta property="product:price:currency" content="EUR" id="og-currency" />

		<script src="https://cdn.tailwindcss.com"></script>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet" />
		<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>


		<!-- JSON-LD Structured Data (will be populated via JS) -->
		<script type="application/ld+json" id="product-jsonld">
			{
				"@context": "https://schema.org/",
				"@type": "Product",
				"name": "",
				"image": [],
				"description": "",
				"sku": "",
				"brand": {
					"@type": "Brand",
					"name": "CozySpot"
				},
				"offers": {
					"@type": "Offer",
					"priceCurrency": "EUR",
					"price": "",
					"availability": "https://schema.org/InStock",
					"itemCondition": "https://schema.org/NewCondition"
				}
			}
		</script>
	</head>
	<body class="antialiased">
		<div id="navbar-container"></div>

		<div id="ambient-bg">
			<div class="shooting-star"></div>
			<div class="shooting-star"></div>
			<div class="shooting-star"></div>
		</div>

		<div id="scroll-progress"></div>

		<div class="mt-16 corner-widget top-left hidden lg:block">
			<div id="live-clock">00:00:00</div>
			<div>System: Active</div>
		</div>

		<div class="corner-widget bottom-left hidden lg:block">
			<div>Scroll to exploration</div>
			<div class="mt-2 w-10 h-[1px] bg-white/20 overflow-hidden">
				<div class="w-full h-full bg-white animate-[slide_2s_infinite]"></div>
			</div>
		</div>

		<div class="corner-widget bottom-right hidden lg:block text-right">
			<div id="mouse-coords">X: 000 // Y: 000</div>
			<div>CozySpot Interface v.3.2</div>
		</div>

		<!-- Main Product Section -->
		<main class="pt-24 pb-20 min-h-screen">
			<!-- Breadcrumbs -->
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-6">
				<nav class="flex items-center gap-2 text-[10px] uppercase tracking-widest text-white/40">
					<a href="index.html" class="hover:text-white transition-colors">Home</a>
					<span>→</span>
					<a href="collections.html" class="hover:text-white transition-colors">Products</a>
					<span>→</span>
					<span id="breadcrumb-category" class="text-white/60">Category</span>
					<span>→</span>
					<span id="breadcrumb-product" class="text-purple-400">Product Name</span>
				</nav>
			</div>

			<!-- Product Grid: Gallery + Info -->
			<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16">
					<!-- LEFT: Product Gallery -->
					<div class="product-gallery reveal reveal-bottom">
						<!-- Main Image -->
						<div class="relative aspect-square rounded-3xl overflow-hidden bg-[#0a0a0a] border border-white/5 mb-4 group">
							<div class="swiper productMainSwiper h-full w-full">
								<div class="swiper-wrapper" id="product-main-images">
									<!-- Images will be injected via JS -->
								</div>
							</div>

							<!-- Zoom Button -->
							<button
								onclick="openProductLightbox()"
								class="absolute top-4 right-4 bg-black/50 hover:bg-black/80 backdrop-blur-sm text-white w-10 h-10 flex items-center justify-center rounded-full transition-all opacity-0 group-hover:opacity-100 border border-white/10"
								title="View fullscreen"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									width="18"
									height="18"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"
								>
									<path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7" />
								</svg>
							</button>

							<!-- Badge -->
							<div id="product-badge" class="absolute top-4 left-4 bg-red-500 text-white text-[9px] font-bold px-3 py-1.5 rounded-full uppercase tracking-wider hidden">Sale</div>

							<!-- Navigation Arrows -->
							<button
								class="product-gallery-prev absolute left-4 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/80 backdrop-blur-sm text-white w-10 h-10 flex items-center justify-center rounded-full transition-all opacity-0 group-hover:opacity-100 border border-white/10"
							>
								‹
							</button>
							<button
								class="product-gallery-next absolute right-4 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/80 backdrop-blur-sm text-white w-10 h-10 flex items-center justify-center rounded-full transition-all opacity-0 group-hover:opacity-100 border border-white/10"
							>
								›
							</button>
						</div>

						<!-- Thumbnails -->
						<div class="swiper productThumbsSwiper">
							<div class="swiper-wrapper" id="product-thumbnails">
								<!-- Thumbnails will be injected via JS -->
							</div>
						</div>
					</div>

					<!-- RIGHT: Product Info -->
					<div class="product-info reveal reveal-bottom lg:py-4" style="transition-delay: 0.1s">
						<!-- Source Indicator -->
						<div id="product-source" class="mb-4">
							<span class="inline-flex items-center gap-1 text-[8px] text-white/30 uppercase tracking-wider">
								<span class="w-1.5 h-1.5 bg-white/30 rounded-full"></span>
								Loading...
							</span>
						</div>

						<!-- Category -->
						<div class="mb-2">
							<span id="product-category" class="text-purple-400 text-[10px] uppercase tracking-[0.3em] font-bold">Category</span>
						</div>

						<!-- Title -->
						<h1 id="product-title" class="text-4xl lg:text-5xl font-black italic uppercase tracking-tight leading-none mb-4">Loading Product...</h1>

						<!-- Rating -->
						<div id="product-rating" class="flex items-center gap-3 mb-6 hidden">
							<div class="flex items-center gap-0.5" id="product-stars">
								<!-- Stars will be injected -->
							</div>
							<span id="product-rating-value" class="text-sm text-white/60">0.0</span>
							<span id="product-reviews-count" class="text-xs text-white/40">(0 reviews)</span>
							<a href="#reviews" class="text-xs text-purple-400 hover:text-purple-300 transition-colors">Read reviews</a>
						</div>

						<!-- Price -->
						<div class="flex items-end gap-4 mb-8">
							<div id="product-price" class="text-4xl font-mono font-black text-white">$0</div>
							<div id="product-old-price" class="text-xl font-mono text-white/30 line-through hidden">$0</div>
							<div id="product-discount" class="bg-red-500/20 text-red-400 text-[10px] font-bold px-2 py-1 rounded-full uppercase hidden">-0%</div>
						</div>

						<!-- Short Description -->
						<p id="product-short-description" class="text-white/60 text-sm leading-relaxed mb-8 max-w-md">Loading product description...</p>

						<!-- Variants: Color -->
						<div id="variant-color-section" class="mb-6 hidden">
							<div class="flex items-center justify-between mb-3">
								<span class="text-[10px] uppercase tracking-widest text-white/40">Color</span>
								<span id="selected-color-name" class="text-[10px] uppercase tracking-widest text-white/60">Select</span>
							</div>
							<div id="variant-colors" class="flex flex-wrap gap-3">
								<!-- Color swatches will be injected -->
							</div>
						</div>

						<!-- Variants: Size/Model -->
						<div id="variant-size-section" class="mb-8 hidden">
							<div class="flex items-center justify-between mb-3">
								<span class="text-[10px] uppercase tracking-widest text-white/40">Size / Model</span>
								<a href="#size-guide" class="text-[10px] text-purple-400 hover:text-purple-300 transition-colors">Size Guide</a>
							</div>
							<div id="variant-sizes" class="flex flex-wrap gap-2">
								<!-- Size buttons will be injected -->
							</div>
						</div>

						<!-- Quantity -->
						<div class="mb-8">
							<span class="text-[10px] uppercase tracking-widest text-white/40 block mb-3">Quantity</span>
							<div class="flex items-center">
								<div class="flex items-center border border-white/20 rounded-xl overflow-hidden">
									<button onclick="decrementQuantity()" class="px-4 py-3 hover:bg-white/10 transition-colors text-lg font-mono">−</button>
									<input
										type="number"
										id="product-quantity"
										min="1"
										max="99"
										value="1"
										class="w-16 text-center bg-transparent text-lg font-mono focus:outline-none"
										onchange="validateQuantity(this)"
									/>
									<button onclick="incrementQuantity()" class="px-4 py-3 hover:bg-white/10 transition-colors text-lg font-mono">+</button>
								</div>
								<span id="product-stock" class="ml-4 text-xs text-white/40">
									<span class="w-2 h-2 bg-green-500 rounded-full inline-block mr-1"></span>
									In Stock
								</span>
							</div>
						</div>

						<!-- Add to Cart Button -->
						<div class="flex flex-col sm:flex-row gap-4 mb-8">
							<button
								id="add-to-cart-btn"
								onclick="handlePDPAddToCart()"
								class="flex-1 bg-white text-black py-4 px-8 rounded-xl text-sm font-black uppercase tracking-widest hover:bg-gray-200 transition-all flex items-center justify-center gap-2 group"
							>
								<svg
									class="w-5 h-5 transition-transform group-hover:scale-110"
									xmlns="http://www.w3.org/2000/svg"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"
								>
									<circle cx="9" cy="21" r="1"></circle>
									<circle cx="20" cy="21" r="1"></circle>
									<path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
								</svg>
								<span id="add-to-cart-text">Add to Cart</span>
							</button>
							<button
								id="wishlist-btn"
								onclick="toggleWishlist()"
								class="w-14 h-14 border border-white/20 rounded-xl flex items-center justify-center hover:bg-white/10 hover:border-white/40 transition-all group"
								title="Add to Wishlist"
							>
								<svg
									class="w-5 h-5 text-white/60 group-hover:text-red-400 transition-colors"
									xmlns="http://www.w3.org/2000/svg"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"
								>
									<path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
								</svg>
							</button>
						</div>

						<!-- USP Features -->
						<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 py-6 border-t border-b border-white/10">
							<div class="flex items-center gap-3">
								<div class="w-10 h-10 rounded-full bg-green-500/10 flex items-center justify-center">
									<svg
										class="w-5 h-5 text-green-400"
										xmlns="http://www.w3.org/2000/svg"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
									>
										<rect x="1" y="3" width="15" height="13"></rect>
										<polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
										<circle cx="5.5" cy="18.5" r="2.5"></circle>
										<circle cx="18.5" cy="18.5" r="2.5"></circle>
									</svg>
								</div>
								<div>
									<div class="text-[10px] uppercase tracking-widest text-white/40">Shipping</div>
									<div class="text-xs font-bold">Free</div>
								</div>
							</div>
							<div class="flex items-center gap-3">
								<div class="w-10 h-10 rounded-full bg-yellow-500/10 flex items-center justify-center">
									<svg
										class="w-5 h-5 text-yellow-400"
										xmlns="http://www.w3.org/2000/svg"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
									>
										<circle cx="12" cy="12" r="10"></circle>
										<polyline points="12 6 12 12 16 14"></polyline>
									</svg>
								</div>
								<div>
									<div class="text-[10px] uppercase tracking-widest text-white/40">Delivery</div>
									<div class="text-xs font-bold">3-12 Days</div>
								</div>
							</div>
							<div class="flex items-center gap-3">
								<div class="w-10 h-10 rounded-full bg-blue-500/10 flex items-center justify-center">
									<svg
										class="w-5 h-5 text-blue-400"
										xmlns="http://www.w3.org/2000/svg"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
									>
										<polyline points="23 4 23 10 17 10"></polyline>
										<path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
									</svg>
								</div>
								<div>
									<div class="text-[10px] uppercase tracking-widest text-white/40">Returns</div>
									<div class="text-xs font-bold">14 Days</div>
								</div>
							</div>
						</div>

						<!-- SKU & Meta -->
						<div class="mt-6 flex flex-wrap gap-4 text-[10px] uppercase tracking-widest text-white/30">
							<span>SKU: <span id="product-sku">N/A</span></span>
							<span>•</span>
							<span>Vendor: <span id="product-vendor">CozySpot</span></span>
						</div>
					</div>
				</div>
			</section>

			<!-- Product Tabs: Description, Specs, Shipping, Reviews -->
			<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-20">
				<div class="border-b border-white/10">
					<nav class="flex gap-8 overflow-x-auto" id="product-tabs-nav">
						<button
							class="product-tab-btn active pb-4 text-sm font-bold uppercase tracking-widest text-white border-b-2 border-purple-500 transition-all whitespace-nowrap"
							data-tab="description"
							onclick="switchProductTab('description')"
						>
							Description
						</button>
						<button
							class="product-tab-btn pb-4 text-sm font-bold uppercase tracking-widest text-white/40 border-b-2 border-transparent hover:text-white/60 transition-all whitespace-nowrap"
							data-tab="specifications"
							onclick="switchProductTab('specifications')"
						>
							Specifications
						</button>
						<button
							class="product-tab-btn pb-4 text-sm font-bold uppercase tracking-widest text-white/40 border-b-2 border-transparent hover:text-white/60 transition-all whitespace-nowrap"
							data-tab="shipping"
							onclick="switchProductTab('shipping')"
						>
							Shipping & Returns
						</button>
						<button
							class="product-tab-btn pb-4 text-sm font-bold uppercase tracking-widest text-white/40 border-b-2 border-transparent hover:text-white/60 transition-all whitespace-nowrap"
							data-tab="reviews"
							onclick="switchProductTab('reviews')"
						>
							Reviews <span id="tab-reviews-count" class="text-purple-400">(0)</span>
						</button>
					</nav>
				</div>

				<div class="py-10">
					<!-- Description Tab -->
					<div id="tab-description" class="product-tab-content">
						<div class="max-w-3xl">
							<div id="product-full-description" class="prose prose-invert prose-sm">
								<p class="text-white/60 leading-relaxed">Loading full product description...</p>
							</div>
						</div>
					</div>

					<!-- Specifications Tab -->
					<div id="tab-specifications" class="product-tab-content hidden">
						<div class="max-w-2xl">
							<table class="w-full">
								<tbody id="product-specs-table">
									<!-- Specs rows will be injected -->
									<tr class="border-b border-white/5">
										<td class="py-4 text-white/40 text-sm w-1/3">Loading...</td>
										<td class="py-4 text-white text-sm">...</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>

					<!-- Shipping Tab -->
					<div id="tab-shipping" class="product-tab-content hidden">
						<div class="max-w-2xl space-y-6">
							<div>
								<h3 class="text-lg font-bold mb-3">Shipping Information</h3>
								<ul class="space-y-2 text-white/60 text-sm">
									<li class="flex items-start gap-2">
										<span class="text-green-400 mt-1">✓</span>
										<span>Free shipping</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-green-400 mt-1">✓</span>
										<span>Standard delivery: 3-12 business days</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-green-400 mt-1">✓</span>
										<span>International shipping available</span>
									</li>
								</ul>
							</div>
							<div>
								<h3 class="text-lg font-bold mb-3">Return Policy</h3>
								<ul class="space-y-2 text-white/60 text-sm">
									<li class="flex items-start gap-2">
										<span class="text-blue-400 mt-1">↩</span>
										<span>14-day return policy for unused items</span>
									</li>
									<li class="flex items-start gap-2">
										<span class="text-blue-400 mt-1">↩</span>
										<span>Refund processed within 5-7 business days</span>
									</li>
								</ul>
							</div>
						</div>
					</div>

					<!-- Reviews Tab -->
					<div id="tab-reviews" class="product-tab-content hidden">
						<div class="max-w-3xl">
							<!-- Reviews Summary -->
							<div class="flex flex-col sm:flex-row gap-8 mb-10 pb-10 border-b border-white/10">
								<div class="text-center sm:text-left">
									<div id="reviews-average" class="text-6xl font-black">0.0</div>
									<div id="reviews-stars-summary" class="flex items-center justify-center sm:justify-start gap-1 mt-2">
										<!-- Stars will be injected -->
									</div>
									<div id="reviews-total" class="text-sm text-white/40 mt-1">Based on 0 reviews</div>
								</div>
								<div class="flex-1">
									<!-- Rating breakdown bars -->
									<div id="reviews-breakdown" class="space-y-2">
										<!-- Will be injected -->
									</div>
								</div>
							</div>

							<!-- Reviews List -->
							<div id="reviews-list" class="space-y-6">
								<p class="text-white/40 text-sm">No reviews yet. Be the first to review this product!</p>
							</div>

							<!-- Write Review Button -->
							<button
								class="mt-8 border border-white/20 hover:bg-white hover:text-black text-white py-3 px-6 rounded-xl text-[10px] font-black uppercase tracking-widest transition-colors"
							>
								Write a Review
							</button>
						</div>
					</div>
				</div>
			</section>

			<!-- Scenes with this Product -->
			<section id="product-scenes-section" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-20 hidden">
				<div class="flex items-center justify-between mb-8">
					<div>
						<h2 class="text-3xl font-black uppercase italic tracking-tight">See it in <span class="text-purple-400">Action</span></h2>
						<p class="text-white/40 text-sm mt-1">This product featured in our curated scenes</p>
					</div>
					<a href="showcase.html" class="text-[10px] uppercase tracking-widest text-purple-400 hover:text-purple-300 transition-colors flex items-center gap-2">
						View All Scenes
						<span>→</span>
					</a>
				</div>
				<div class="swiper productScenesSwiper">
					<div class="swiper-wrapper" id="product-scenes">
						<!-- Scene cards will be injected -->
					</div>
					<div class="swiper-pagination mt-6"></div>
				</div>
			</section>

			<!-- Related Products -->
			<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-20">
				<div class="flex items-center justify-between mb-8">
					<div>
						<h2 class="text-3xl font-black uppercase italic tracking-tight">You May Also <span class="text-purple-400">Like</span></h2>
						<p class="text-white/40 text-sm mt-1">Similar products from our collection</p>
					</div>
					<a href="collections.html" class="text-[10px] uppercase tracking-widest text-purple-400 hover:text-purple-300 transition-colors flex items-center gap-2">
						View All Products
						<span>→</span>
					</a>
				</div>
				<div class="swiper relatedProductsSwiper">
					<div class="swiper-wrapper" id="related-products">
						<!-- Related product cards will be injected -->
					</div>
					<div class="swiper-pagination mt-6"></div>
				</div>
			</section>
		</main>

		<!-- Sticky Mobile Add to Cart Bar -->
		<div id="mobile-sticky-cart" class="fixed bottom-0 inset-x-0 bg-black/95 backdrop-blur-xl border-t border-white/10 p-4 z-50 lg:hidden translate-y-full transition-transform duration-300">
			<div class="flex items-center justify-between gap-4">
				<div class="flex-1 min-w-0">
					<div id="sticky-price" class="text-lg font-bold font-mono">$0</div>
					<div id="sticky-title" class="text-xs text-white/50 truncate">Product Name</div>
				</div>
				<button
					onclick="handlePDPAddToCart()"
					class="bg-white text-black px-6 py-3 rounded-xl text-[10px] font-black uppercase tracking-widest hover:bg-gray-200 transition-colors flex items-center gap-2"
				>
					<svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<circle cx="9" cy="21" r="1"></circle>
						<circle cx="20" cy="21" r="1"></circle>
						<path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
					</svg>
					Add
				</button>
			</div>
		</div>

		<!-- Product Lightbox -->
		<div id="product-lightbox" class="fixed inset-0 z-[200] bg-black/95 backdrop-blur-md hidden flex items-center justify-center">
			<button
				onclick="closeProductLightbox()"
				class="absolute top-6 right-6 bg-white/10 hover:bg-white/20 text-white w-12 h-12 flex items-center justify-center rounded-full transition-all border border-white/10 text-xl z-10"
			>
				✕
			</button>
			<button
				class="lightbox-prev absolute left-6 top-1/2 -translate-y-1/2 bg-white/10 hover:bg-white/20 text-white w-12 h-12 flex items-center justify-center rounded-full transition-all border border-white/10 text-2xl"
			>
				‹
			</button>
			<button
				class="lightbox-next absolute right-6 top-1/2 -translate-y-1/2 bg-white/10 hover:bg-white/20 text-white w-12 h-12 flex items-center justify-center rounded-full transition-all border border-white/10 text-2xl"
			>
				›
			</button>
			<div class="swiper productLightboxSwiper w-full max-w-5xl mx-auto px-16">
				<div class="swiper-wrapper" id="lightbox-images">
					<!-- Images will be injected -->
				</div>
			</div>
			<div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-2" id="lightbox-pagination">
				<!-- Pagination dots -->
			</div>
		</div>

		<!-- Footer (loaded from footer.html) -->
		<div id="footer-container"></div>

		<!-- Cart Drawer (included from cart.html) -->
		<div id="cart-container"></div>

		<script src="script.js"></script>
		<script>
			// Load Navigation
			fetch('navigation.html')
				.then(response => response.text())
				.then(html => {
					document.getElementById('navbar-container').innerHTML = html
					// Re-run menu scripts after loading
					if (typeof runMenuScripts === 'function') {
						runMenuScripts()
					}
					// Call updateLogo after navigation is loaded
					if (typeof updateLogo === 'function') {
						updateLogo()
					}
				})
				.catch(err => console.error('Failed to load navigation:', err))

			// Load Footer
			fetch('footer.html')
				.then(res => res.text())
				.then(html => {
					document.getElementById('footer-container').innerHTML = html
				})
				.catch(err => console.error('Failed to load footer:', err))

			// Load cart component
			fetch('cart.html')
				.then(res => res.text())
				.then(html => {
					document.getElementById('cart-container').innerHTML = html
					// Re-initialize Cart after DOM is ready
					if (typeof Cart !== 'undefined' && Cart.init) {
						Cart.init()
					}
				})

			// Initialize product page when data is loaded
			document.addEventListener('DOMContentLoaded', () => {
				initProductPage()
			})
		</script>
	</body>
</html>
