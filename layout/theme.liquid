<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% comment %}
      Font preloading:
      1. Preconnect to font CDN for faster connection
      2. Preload only the critical font variant (base weight)
      3. Additional variants load on-demand via @font-face
    {% endcomment %}
    {% unless settings.type_primary_font.system? %}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>

      {% comment %} Preload the base font variant for initial page render {% endcomment %}
      {{ settings.type_primary_font | font_url | preload_tag: as: 'font', crossorigin: 'anonymous' }}
    {% endunless %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="preload" href="{{ 'style.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="{{ 'style.css' | asset_url }}"></noscript>

    {% assign needs_swiper = false %}
    {% if request.page_type == 'index' or request.page_type == 'product' %}
      {% assign needs_swiper = true %}
    {% endif %}
    {% if request.page_type == 'page' and page.handle == 'showcase' %}
      {% assign needs_swiper = true %}
    {% endif %}

    {% assign needs_jdgm = false %}
    {% if request.page_type == 'index' or request.page_type == 'product' or request.page_type == 'collection' or request.page_type == 'list-collections' or request.page_type == 'search' %}
      {% assign needs_jdgm = true %}
    {% endif %}

    {% if needs_swiper %}
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    {% endif %}

    {% if needs_jdgm %}
      <link rel="stylesheet" href="https://cdn.judge.me/widget.css">
    {% endif %}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    <link rel="icon" type="image/png" href="{{ 'cozy-wh-logo-32x.png' | asset_url }}">

    <script>
      window.CozySpot = window.CozySpot || {};
      {% assign needs_data = false %}
      {% if request.page_type == 'index' %}
        {% assign needs_data = true %}
      {% endif %}
      {% if request.page_type == 'page' and page.handle == 'showcase' %}
        {% assign needs_data = true %}
      {% endif %}
      window.CozySpot.dataUrl = {% if needs_data %}"{{ 'data.json' | asset_url }}"{% else %}null{% endif %};
      window.CozySpot.fallbackImage = "{{ 'min-01.jpg' | asset_url }}";
      window.CozySpot.assetBase = "{{ 'min-01.jpg' | asset_url | split: 'min-01.jpg' | first }}";
      window.CozySpot.currencySymbol = {{ cart.currency.symbol | json }};
      window.CozySpot.routes = {
        root: "{{ routes.root_url }}",
        collections: "{{ routes.collections_url }}",
        productBase: "/products",
        showcase: "{{ pages['showcase'].url | default: '/pages/showcase' }}"
      };
    </script>

    <script>
      // Create a global ratings store
      window.productRatings = {
        {% for product in collections.all.products %}
          "{{ product.id }}": {
            "rating": "{{ product.metafields.judgeme.badge | split: "data-average-rating='" | last | split: "'" | first }}",
            "count": "{{ product.metafields.judgeme.badge | split: "data-number-of-reviews='" | last | split: "'" | first }}"
          }{% unless forloop.last %},{% endunless %}
        {% endfor %}
      };
    </script>

    <!-- Meta Pixel Code -->
    <script>
      !function(f,b,e,v,n,t,s)
      {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
      n.callMethod.apply(n,arguments):n.queue.push(arguments)};
      if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
      n.queue=[];t=b.createElement(e);t.async=!0;
      t.src=v;s=b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t,s)}(window, document,'script',
      'https://connect.facebook.net/en_US/fbevents.js');
      fbq('init', '1588796622157577');
      fbq('track', 'PageView');
    </script>
    <noscript><img height="1" width="1" style="display:none"
      src="https://www.facebook.com/tr?id=1588796622157577&ev=PageView&noscript=1"
    /></noscript>
    <!-- End Meta Pixel Code -->

    {{ content_for_header }}
    {% if needs_jdgm %}
      <script defer src="https://cdn.judge.me/widget.js"></script>
    {% endif %}
  </head>
  <body>
    {% sections 'navigation-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
    {% section 'cart-drawer' %}
    {% if needs_swiper %}
      <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    {% endif %}
    {{ 'script.js' | asset_url | script_tag }}
    {% if request.page_type == 'product' %}
      {{ 'script-pdp.js' | asset_url | script_tag }}
    {% endif %}
  </body>
</html>
